<UserControl x:Class="PhoneKit.TestApp.ImageControls.CusomTile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="200" d:DesignWidth="200"
    Width="200" Height="200">
    
    <Grid x:Name="LayoutRoot">
        <Border  Margin="10" Background="Black">
            <StackPanel Margin="10">
                <TextBlock FontWeight="Bold">Title</TextBlock>
                <TextBlock>Content line 1</TextBlock>
                <TextBlock>Content line 2</TextBlock>
                <TextBlock>Content line 3</TextBlock>
                <TextBlock>Content line 4</TextBlock>
                <TextBlock>Content line 5</TextBlock>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>